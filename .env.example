# Configuración del Servidor
PORT=4000
NODE_ENV=development

# Base de Datos MySQL
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=eguva_db
DB_PORT=3306

# JWT (Generar uno nuevo con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your_secret_key_here

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# URLs para OAuth
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:4000

# Email Configuration (para recuperación de contraseña)
# Para desarrollo, puedes usar Ethereal Email (https://ethereal.email/)
# Para producción, usa un servicio real como Gmail, SendGrid, etc.
EMAIL_SERVICE=gmail
EMAIL_USER=tu_email@gmail.com
EMAIL_PASSWORD=tu_contraseña_de_aplicacion
EMAIL_FROM=noreply@eguva.com

# O usa SMTP personalizado
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
